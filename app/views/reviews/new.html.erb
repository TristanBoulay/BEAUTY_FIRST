


  <p class="t"> Add a review on your service <%= @service.title %></p>
   <%= simple_form_for [@service,@review] do |f| %>
    <%= f.input :comment %>
    <%= f.submit class: 'btn btn-primary review-btn' %>
    <% end %>


<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
