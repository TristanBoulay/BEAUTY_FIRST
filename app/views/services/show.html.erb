
<h2 class= "display-2"><%= @service.title %></h2>
<h3 class= "display-3"> Name of the place : <%= @service.name %></h3>
<button type="button" class="btn btn-primary">book here</button>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "cellulite-treatment-2" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "cellulite-treatment-1" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "cellulite-treatment-3" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<p>address: <%= @service.address %></p>
<p><%= @service.price %> euros</p>
<div id="map"></div>

</div>
